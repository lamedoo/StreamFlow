<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="100dp"
    tools:background="@color/secondary_color"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/continue_watching_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="ფილმის სახელი"/>

    <ImageView
        android:id="@+id/continue_watching_info_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/clear_bottomsheet"
        app:layout_constraintTop_toTopOf="@id/continue_watching_info_title"
        app:layout_constraintBottom_toBottomOf="@id/continue_watching_info_title"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/continue_watching_info_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/continue_watching_info_title">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/info_icon_2"
            app:tint="@color/general_text_color"
            android:tint="@color/general_text_color"
            tools:ignore="UseAppTint" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textSize="15sp"
            android:text="დეტალები და მეტი" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/continue_watching_info_remove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/continue_watching_info_details">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/remove_db_title_icon"
            app:tint="@color/general_text_color"
            android:tint="@color/general_text_color"
            tools:ignore="UseAppTint"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:text="სიიდან წაშლა"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>