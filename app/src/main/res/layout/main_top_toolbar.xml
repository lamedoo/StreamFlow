<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_top_toolbar"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    app:layout_constraintTop_toTopOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/main_logo_new"
        android:layout_width="140dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/streamflowlogo"/>

    <ImageView
        android:id="@+id/home_favorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:src="@drawable/title_favorite_icon"
        app:layout_constraintTop_toTopOf="@id/main_logo_new"
        app:layout_constraintBottom_toBottomOf="@id/main_logo_new"
        app:layout_constraintEnd_toStartOf="@id/home_profile"/>

    <ImageView
        android:id="@+id/home_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/user_profile_icon"
        app:layout_constraintTop_toTopOf="@id/main_logo_new"
        app:layout_constraintBottom_toBottomOf="@id/main_logo_new"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>