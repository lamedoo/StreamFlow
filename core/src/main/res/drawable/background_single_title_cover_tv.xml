        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/primaryColor"
                android:centerColor="@color/primaryColor"
                android:endColor="@android:color/transparent"
                android:centerX="0.2"
                android:type="linear"
                android:angle="0" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#CC1e222e"
                android:centerColor="#CC1e222e"
                android:endColor="@android:color/transparent"
                android:centerX="0.3"
                android:type="linear"
                android:angle="180" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#CC1e222e"
                android:centerColor="#CC1e222e"
                android:endColor="@android:color/transparent"
                android:centerX="0.3"
                android:type="linear"
                android:angle="90" />
        </shape>
    </item>
