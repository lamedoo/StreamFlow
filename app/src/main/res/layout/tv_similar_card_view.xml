<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tv_default_card_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_episodes_card_tv"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/card_poster"
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        tools:src="@drawable/friends_poster"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/card_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:minLines="2"
        android:maxLines="2"
        tools:text="სახელი"
        android:fontFamily="@font/helvetica_neue_lt_geo_caps_65_medium"
        android:textSize="12sp"
        android:textColor="@color/text_on_accent_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_poster"/>

</androidx.constraintlayout.widget.ConstraintLayout>