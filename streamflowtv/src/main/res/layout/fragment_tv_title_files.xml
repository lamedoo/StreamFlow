<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/fragment_padding"
    android:clickable="true"
    android:focusable="true"
    android:background="#99282A38"
    android:focusableInTouchMode="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/go_top_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="5dp"
            android:fontFamily="@font/helvetica_neue_lt_geo_caps_55_roman"
            android:text="@string/details"
            android:drawableTop="@drawable/icon_arrow_up"
            tools:ignore="UseCompatTextViewDrawableXml"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <fragment
            android:id="@+id/files_layout"
            android:name="com.lukakrodzaia.streamflowtv.ui.tvsingletitle.tvtitlefiles.TvTitleFilesBrowse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/go_top_text"/>


</androidx.constraintlayout.widget.ConstraintLayout>