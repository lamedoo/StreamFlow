<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="5dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/background_button_tv"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/language_name"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/text_on_accent_color"
        android:fontFamily="@font/helvetica_neue_lt_geo_caps_65_medium"
        tools:text="ინგლისური"/>

    <ImageView
        android:id="@+id/current_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:src="@drawable/indicator_current_episode_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        tools:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>